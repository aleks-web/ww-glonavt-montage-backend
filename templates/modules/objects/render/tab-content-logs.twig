{#
    Таблица логов

    request_params - Параметры запроса
    logs - Логи
    events_names - названия событий
#}

{% if logs | length > 0 %}
<div class="tabs__tableContainer">
    <div class="tabs__table">
        <table>
            <thead>
                <tr>
                    <th class="text-start">Событие</th>
                    <th class="text-start">Инициатор</th>
                    <th class="text-start">Дата</th>
                </tr>
            </thead>

            <tbody>
                {% for log in logs %}
                    <tr data-fancybox data-src="#fmodal-ts-object-view" class="pointer">
                        <td class="text-start">{{ events_names[log.event_id] }}</td>
                        <td class="text-start">{{ short_name(log.userAdded.name, log.userAdded.surname, log.userAdded.patronymic) }}</td>
                        <td class="text-start">{{ log.created_at | date('d.m.Y') }} в {{ log.created_at | date('H:i') }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% else %}
    <div style="display: flex; align-items: center; justify-content: center; font-size: 20px;">Логов нет!</div>
{% endif %}