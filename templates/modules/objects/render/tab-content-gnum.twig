{#
    Таблица логов

    request_params - Параметры запроса
    logs - Логи
    events_names - названия событий
#}
{% if logs | length > 0 %}
<div class="tabs__tableContainer">
    <div class="tabs__table">
        <table>
            <thead>
                <tr>
                    <th class="text-start" width="15%">Дата смены</th>
                    <th class="text-start">Старый Гос№</th>
                    <th class="text-start">Новый Гос№</th>
                </tr>
            </thead>

            <tbody>
                {% for log in logs %}
                    <tr class="pointer">
                        <td class="text-start">{{ log.created_at | date('d.m.Y') }} в {{ log.created_at | date('H:i') }}</td>
                        <td class="text-start">{{ log.log_data.old_value | default('-') }}</td>
                        <td class="text-start">{{ log.log_data.new_value | default('-') }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% else %}
    <div style="display: flex; align-items: center; justify-content: center; font-size: 20px;">Логов смены гос.номеров нет!</div>
{% endif %}